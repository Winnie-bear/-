.top-bar{
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 300rpx;
  background-image: linear-gradient(to bottom, #5792FE, #46D7FC);
}
.top-bar::after{
  top:0;
  left: -100rpx;
  position: absolute;
  z-index: -1;
  content: '';
  display: block;
  background-color: #46D7FC;
  width: 950rpx;
  height: 350rpx;
  border-radius: 40%;
}

.top-bar text{
  color: #FFFFFF;
  font-size:0.6rem;
  line-height: 40rpx;
  margin-right: 20rpx;
}
.top-bar button{
  width: 250rpx;
  border-radius: 40rpx;
  background-color: #FFFFFF;
  box-shadow: 0rpx 6rpx 12rpx rgba(0,0,0, .17);
  color: #5792FE;
  font-size: 0.6rem;
}